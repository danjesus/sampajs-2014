.schedule {
    position: relative;
    width: 100%;
    background: #2a2a2a;
    padding-top: 7em;

    .block {
        margin: 5px auto;
        max-width: 62.5em;
        position: relative;
        border: 1px solid yellow;

        &:before, &:after {
            content: "";
            display: table;
        }
    }

    .space  {
        position: relative;
    }

    .circle {
        background: #000;
        border-radius: 50%;
        width: 54px;
        height: 54px;
        display: block;
        position: relative;
        float: left;
        margin-left: -27px;

        &:before {
            content: "";
            width: 18px;
            height: 18px;
            background: #7d7d7d;
            border-radius: 50%;
            display: block;
            position: absolute;
            top: 50%;
            left: 50%;
            margin-left: -9px;
            margin-top: -9px;
        }

        &:after {
            height: 2px;
            width: 60px;
            content: "";
            position: absolute;
            top: 25px;
            right: 64px;
            background: #555555;
        }
    }

    .timeline-content {
        text-align: right;
        padding-right: 100px;

        p {
            margin: 0;
            color: #fff;
            font-size: 19px;

            em {
                font-style: normal;
                color: #969696;
            }
        }

        time {
            color: #ffde00;
            font: 27px/1 Arial,sans-serif;
        }
    }

    .timeline-block {
        height: 104px;
    }

    /* font lato bold */
    .end {
        width: 500px;
        background: #7d7d7d;
        font: 27px/145px 'Helvetica Neue';
        text-align: center;
        text-transform: uppercase;
        margin: 0 auto;
        color: #000;
        position: relative;
        z-index: 2;

        em {
            color: #fff;
           font-style: normal;
        }
    }

    .timeline-left {
        .circle {
            float: right;
            margin-right: -27px;

            &:after {
                left: 64px;
                right: auto;
            }
        }

        .space {
            border-left: 0;
        }

        .timeline-content {
            text-align: left;
            padding-left: 100px;
            border-right: 0;
        }
    }

    .bar {
        border: 1px solid #555;
        height: 80%;
        width: 3px;
        position: absolute;
        left: 50%;
        margin-left: -2px;
    }
}
